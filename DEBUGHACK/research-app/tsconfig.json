{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "composite": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "../astro"
    },
    {
      "path": "../engine"
    },
    {
      "path": "../engine-helpers"
    },
    {
      "path": "../engine-pinia"
    },
    {
      "path": "../engine-types"
    },
    {
      "path": "../research-app-messages"
    }
  ]
}